package com.example.frasesmotivacionais1;

import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.TextView;

import androidx.activity.EdgeToEdge;
import androidx.appcompat.app.AppCompatActivity;
import androidx.core.graphics.Insets;
import androidx.core.view.ViewCompat;
import androidx.core.view.WindowInsetsCompat;

import java.util.Random;

public class MainActivity extends AppCompatActivity {
    private Button botao; (importar a classe, Alt + Enter)

    private TextView texto;
    private String[] frases = {"Se voc√™ tra√ßar metas absurdamente altas e falhar, seu fracasso ser√° muito melhor que o sucesso de todos. ",
            "O sucesso normalmente vem para quem est√° ocupado demais para procurar por ele.",
            "Se voc√™ n√£o est√° disposto a arriscar, esteja disposto a uma vida comum.",
            "Vencedor n√£o √© aquele que sempre vence, mas sim aquele que nunca para de lutar.",
            "√Äs vezes voc√™ tem que levantar sozinho e seguir em frente...",
            "N√£o tenha medo da mudan√ßa. Coisas boas se v√£o para que melhores possam vir.",
            "N√£o chore porque acabou, sorria porque aconteceu.",
            "Nunca diga eu n√£o consigo. Voc√™ consegue sim, basta ter for√ßa de vontade e f√©.",
            "Tudo √© poss√≠vel. O imposs√≠vel apenas demora mais...",
            "No fim tudo d√° certo, e se n√£o deu certo √© porque ainda n√£o chegou ao fim.",
            "S√≥ parte pra agress√£o, quem n√£o se garante na sinuca",

            "N√£o se preocupe em cair, cobra n√£o anda, rasteja"};
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        EdgeToEdge.enable(this);
        setContentView(R.layout.activity_main);
        ViewCompat.setOnApplyWindowInsetsListener(findViewById(R.id.main), (v, insets) -> {
            Insets systemBars = insets.getInsets(WindowInsetsCompat.Type.systemBars());
            v.setPadding(systemBars.left, systemBars.top, systemBars.right, systemBars.bottom);
            return insets;
        });
        //Relacionar o componente gr√°fico com o objeto
        botao = findViewById(R.id.botaoId);
        texto = findViewById(R.id.textoId);
        //Colocar a√ß√£o no bot√£o
        botao.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Random numero = new Random();
                int sorteado = numero.nextInt(frases.length);
                texto.setText(frases[sorteado]);

            }
        });
    }
}


Segunda parte: For√ßar a sincroniza√ß√£o do projeto
Se o bot√£o ‚ÄúSync Now‚Äù n√£o apareceu, fa√ßa isso manualmente:
‚û§ üîß Manualmente:
1.	V√° at√© o menu superior:
File > Sync Project with Gradle Files
(isso for√ßa o Android Studio a reconhecer a nova cor)
2.	Ou use o atalho:
Ctrl + Shift + A ‚Üí digite Sync Project e selecione a op√ß√£o.

package com.example.exercicio1;

import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.TextView;

import androidx.activity.EdgeToEdge;
import androidx.appcompat.app.AppCompatActivity;
import androidx.core.graphics.Insets;
import androidx.core.view.ViewCompat;
import androidx.core.view.WindowInsetsCompat;

public class MainActivity extends AppCompatActivity {
    private Button botaoMensagem;
    private Button botaoLimpar;
    private TextView texto;
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        EdgeToEdge.enable(this);
        setContentView(R.layout.activity_main);
        ViewCompat.setOnApplyWindowInsetsListener(findViewById(R.id.main), (v, insets) -> {
            Insets systemBars = insets.getInsets(WindowInsetsCompat.Type.systemBars());
            v.setPadding(systemBars.left, systemBars.top, systemBars.right, systemBars.bottom);
            return insets;
        });
        // Relacionar componentes
        botaoMensagem = findViewById(R.id.botaoId);
        botaoLimpar = findViewById(R.id.botaoId1);
        texto = findViewById(R.id.textoId);

        // A√ß√£o do bot√£o de mensagem
        botaoMensagem.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                texto.setText("Voc√™ clicou no bot√£o");
            }
        });

        // A√ß√£o do bot√£o de limpar
        botaoLimpar.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                texto.setText(""); // limpa o texto
			texto.setText("Voc√™ limpou"); // insere novo texto
            }
        });

    }
}

