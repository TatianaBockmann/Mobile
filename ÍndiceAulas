Aula03 19/08	private Button botao;
    private Button botaoLimpar;
    private TextView resposta;
    private EditText numero1;
    private EditText numero2;
...
        // Relacionar Componentes
        botao = findViewById(R.id.botaoId);
        resposta = findViewById(R.id.respostaId);
        numero1 = findViewById(R.id.num1Id);
        numero2 = findViewById(R.id.num2Id);
        botaoLimpar = findViewById(R.id.botao1Id);

        //Ação nop botao
        botao.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                String valor1 = numero1.getText().toString();
                String valor2 = numero2.getText().toString();

                if (valor1.isEmpty() || valor2.isEmpty()) {
                    resposta.setText("Preencha os dois números");
                } else {
                    double num1 = Double.parseDouble(valor1);
                    double num2 = Double.parseDouble(valor2);
                    double soma = num1 + num2;
                    resposta.setText("A soma é: " + soma);
                    // Formatar com 2 casas decimais
                    String resultadoFormatado = String.format("A soma é: %.2f", soma);
                    resposta.setText(resultadoFormatado);

                    // Se quiser formatar os inputs também (opcional):
                    numero1.setText(String.format("%.2f", num1));
                    numero2.setText(String.format("%.2f", num2));
                }

            }

        });
        // Ação do botão de limpar
        botaoLimpar.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                numero1.setText(""); // limpa o texto
                numero2.setText(""); // limpa o texto
                resposta.setText(""); // limpa o texto

            }
        });

Aula04 26/08   Toast	    private EditText gasolina, alcool;
    private Button botao;
...
});
// Relacionar Componentes
        botao = findViewById(R.id.botaoId);
        gasolina = findViewById(R.id.gasolinaId);
        alcool = findViewById(R.id.alcoolId);
        
//Ação no botao

        botao.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                String valorAlcool = alcool.getText().toString();
                String valorGasolina = gasolina.getText().toString();
                if (valorAlcool.isEmpty() || valorGasolina.isEmpty()) {
                    Toast.makeText(MainActivity.this, "Preencha ambos os campos!", Toast.LENGTH_SHORT).show();
                    return;
                }

                try {
                    double alcoolId = Double.parseDouble(valorAlcool);
                    double gasolinaId = Double.parseDouble(valorGasolina);

                    if (alcoolId / gasolinaId <= 0.7) {
                        Toast.makeText(MainActivity.this, "Melhor abastecer com Álcool!", Toast.LENGTH_LONG).show();
                    } else {
                        Toast.makeText(MainActivity.this, "Melhor abastecer com Gasolina!", Toast.LENGTH_LONG).show();
                    }
                } catch (NumberFormatException e) {
                    Toast.makeText(MainActivity.this, "Digite valores válidos!", Toast.LENGTH_SHORT).show();
                }
            }
        });

